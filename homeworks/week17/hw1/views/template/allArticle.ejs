<style>
/* section */
section{
    width: 60vw;
    margin: auto;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 2px 10px 0 rgb(225 225 225 / 50%), 0 2px 20px 10px rgb(225 225 225 / 10%);
}

.articles{
    padding: 10px 20px;
}

.article{
    padding: 10px 20px;
    margin: 10px 0;
}

.desc:after{
    content: '';
    display: block;
    width: 0%;
    height: 5px;
    margin: 10px 0 0 0;
    border-bottom: 5px solid rgb(255, 230, 0);
    transition: width .5s .50s;
}

.article:hover .desc:after{
    width: 70%;
}

.edit__btn{
    text-decoration: none;
    color: aliceblue;
    background-color: #224;
    padding: 5px 10px;
    border: 1px solid #224;
    border-radius: 5px;
    font-size: 15px;
}

.edit__btn:hover{
    color: #224;
    background-color: white;
    border: 1px solid #224;
}

.del__btn{
    text-decoration: none;
    color: aliceblue;
    background-color: #224;
    padding: 5px 10px;
    border: 1px solid #224;
    border-radius: 5px;
    font-size: 15px;
}

.del__btn:hover{
    color: #224;
    background-color: white;
    border: 1px solid #224;
}

.articles-form{
    position: absolute;
    top: 67%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.articles-textarea{
    width: 60vw;
    height: 20vh;
    display: flex;
    background-color: #224;
    color: white;
    font-size: 20px;
    border: 1px solid aliceblue;
    border-radius: 6px;
}

.articles-textarea__btn{
    width: 60vw;
    padding: 5px 0;
    border: 1px solid aliceblue;
    border-radius: 6px;
    background-color: #224;
    color: aliceblue;
    font-size: 14px;
    letter-spacing: 6px;
    margin: 15px 0px 0px 2px;
}

.articles-textarea__btn:hover{
    padding: 5px 0;
    border: 1px solid #224;
    border-radius: 6px;
    cursor: pointer;
    background-color: white;
    color: #224;
}
</style>
<section>
    <div class="articles">
        <% articles.forEach(function(article) { %>
            <div class="article">
                <h1 article__title><%- article.title %></h1>
                <h2 article__editor>Write By <%= article.User.nickname %></h2>
                <p class="desc"><%- article.content %></p>
            </div>
        <% }) %>
    </div>
</section>