<style>
section{
    width: 60vw;
    margin: auto;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 2px 10px 0 rgb(225 225 225 / 50%), 0 2px 20px 10px rgb(225 225 225 / 10%);
}

.articles{
    padding: 0px 20px 50px 20px;
}

.article{
    padding: 10px 20px;
}

.edit__btn{
    text-decoration: none;
    color: aliceblue;
    background-color: #224;
    padding: 5px 10px;
    border: 1px solid #224;
    border-radius: 5px;
    font-size: 15px;
}

.edit__btn:hover{
    color: #224;
    background-color: white;
    border: 1px solid #224;
}

.del__btn{
    text-decoration: none;
    color: aliceblue;
    background-color: #224;
    padding: 5px 10px;
    border: 1px solid #224;
    border-radius: 5px;
    font-size: 15px;
}

.del__btn:hover{
    color: #224;
    background-color: white;
    border: 1px solid #224;
}

.articles-form{
    position: absolute;
    top: 67%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.articles-textarea{
    width: 60vw;
    height: 20vh;
    display: flex;
    background-color: #224;
    color: white;
    font-size: 20px;
    border: 1px solid aliceblue;
    border-radius: 6px;
}

.articles-textarea__btn{
    width: 60vw;
    padding: 5px 0;
    border: 1px solid aliceblue;
    border-radius: 6px;
    background-color: #224;
    color: aliceblue;
    font-size: 14px;
    letter-spacing: 6px;
    margin: 15px 0px 0px 2px;
}

.articles-textarea__btn:hover{
    padding: 5px 0;
    border: 1px solid #224;
    border-radius: 6px;
    cursor: pointer;
    background-color: white;
    color: #224;
}
.admin{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin-top: 50px;
}

.h2__mark{
    color: aliceblue;
}

.add__btn{
    display: flex;
    justify-content: center;
    color: aliceblue;
    text-decoration: none;
    padding: 5px;
    border: 1px solid aliceblue;
    border-radius: 6px;
}
.add__btn:hover{
    border-radius: 6px;
    padding: 5px;
    background-color: aliceblue;
    color: #224;
}
</style>
<!doctype html>
    <head>
        <%- include('template/body') %>
        <%- include('template/navbar') %>
        <header>
            <div class="main">
                <div class="title">
                    <h1>後台管理</h1>
                </div>
            </div>
        </header>

            <div class="admin">
                <h2 class="h2__mark">嗨嗨，寫點文章唄</h2>
                <a class="add__btn" href="/add">新增文章</a>
            </div>

            <section>
                <div class="articles">
                    <% articles.forEach(function(article) { %>
                        <div class="article">
                            <% if (username === article.User.username) { %>
                            <h1 class="article__title"><%- article.title %></h1>
                            <h2 article__editor>Write By <%= article.User.nickname %></h2>
                            <p class="article__desc"><%- article.content %></p>
                                <a class="edit__btn" href="/update_articles/<%= article.id %>">編輯</a>
                                <a class="del__btn" href="/delete_articles/<%= article.id %>">刪除</a>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </section>

                
        <%- include('template/footer') %>
    </head>
</html>

